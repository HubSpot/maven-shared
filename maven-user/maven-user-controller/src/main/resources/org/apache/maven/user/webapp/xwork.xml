<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.0//EN" "http://www.opensymphony.com/xwork/xwork-1.0.dtd">

<xwork>
  <package name="maven-user" extends="webwork-default" namespace="/user">

    <action name="edit" class="editUser">
      <result name="input">/user/edit.jsp</result>
      <result name="permissions">/user/addRole.jsp</result>
      <result name="success" type="chain">list</result>
    </action>

    <action name="delete" class="deleteUser">
      <result name="delete">/user/delete.jsp</result>
      <result name="success" type="chain">list</result>
    </action>

    <action name="list" class="listUsers">
      <result name="success">/user/list.jsp</result>
    </action>
    
    <action name="myAccount" class="editUser" method="editMe">
      <result name="input">/user/edit.jsp</result>
      <result name="success">/</result>
    </action>
    
    <action name="saveAccount" class="editUser">
      <result name="input">/user/edit.jsp</result>
      <result name="success" type="chain">list</result>
    </action>
    
    <action name="editGroup" class="editUsergroup">
      <result name="input">/user/groups/edit.jsp</result>
      <result name="permissions">/user/addRole.jsp</result>
      <result name="success" type="chain">list</result>
    </action>
    
    <action name="deleteGroup" class="deleteUsergroup">
      <result name="delete">/user/groups/delete.jsp</result>
      <result name="success" type="chain">list</result>
    </action>
    
    <action name="listGroups" class="listUsergroups">
      <result name="success">/user/groups/list.jsp</result>
    </action>

  </package>
</xwork>
